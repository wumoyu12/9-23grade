			System.out.println("It's invalid, Please enter again.");
			hwgrade2();
		}
		
		else
		{
			hwgrade3();
		}
	}
	//Homework grade 3
		static void hwgrade3() {
			Scanner input = new Scanner(System.in);
			System.out.println("Enter the second homework grade");
